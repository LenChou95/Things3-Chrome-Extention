{
    "manifest_version": 2,
    "name": "Things3 Chrome Extension",
    "version": "1.0",
    "description": "A Chrome extension for saving to Things3",
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "64": "images/icon64.png",
      "128": "images/icon128.png"
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "64": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "permissions": [
      "tabs",
      "contextMenus"
    ]
  }
  